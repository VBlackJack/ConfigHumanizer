<Window x:Class="ConfigHumanizer.UI.Views.FixConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
        mc:Ignorable="d"
        Title="Confirmer le Correctif"
        Height="500" Width="800"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource LightBackground}"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding Key="Escape" Command="{x:Static SystemCommands.CloseWindowCommand}"/>
    </Window.InputBindings>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Row 0: Why? - Fix Reason -->
        <Border Grid.Row="0"
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16"
                Margin="0,0,0,16">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="ðŸ’¡" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Pourquoi ce correctif ?"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextDark}"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock x:Name="FixReasonText"
                           FontSize="13"
                           Foreground="{StaticResource TextMuted}"
                           TextWrapping="Wrap"
                           LineHeight="20"/>
            </StackPanel>
        </Border>

        <!-- Row 1: Two columns for comparison -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column: Original -->
            <Border Grid.Column="0"
                    Background="{StaticResource CardBackground}"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="1"
                    CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                            Background="#FFF0F0"
                            CornerRadius="8,8,0,0"
                            Padding="12,10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âŒ" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Original"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="#C62828"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <avalonEdit:TextEditor x:Name="OriginalEditor"
                                           Grid.Row="1"
                                           FontFamily="Consolas"
                                           FontSize="13"
                                           ShowLineNumbers="True"
                                           IsReadOnly="True"
                                           Background="#FFF8F8"
                                           BorderThickness="0"
                                           VerticalScrollBarVisibility="Auto"
                                           HorizontalScrollBarVisibility="Auto"/>
                </Grid>
            </Border>

            <!-- Arrow in the middle -->
            <TextBlock Grid.Column="1"
                       Text="âžœ"
                       FontSize="24"
                       Foreground="{StaticResource PrimaryColor}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <!-- Right Column: Proposed -->
            <Border Grid.Column="2"
                    Background="{StaticResource CardBackground}"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="1"
                    CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                            Background="#F0FFF0"
                            CornerRadius="8,8,0,0"
                            Padding="12,10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âœ“" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="ProposÃ©"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="#2E7D32"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <avalonEdit:TextEditor x:Name="ProposedEditor"
                                           Grid.Row="1"
                                           FontFamily="Consolas"
                                           FontSize="13"
                                           ShowLineNumbers="True"
                                           IsReadOnly="True"
                                           Background="#F8FFF8"
                                           BorderThickness="0"
                                           VerticalScrollBarVisibility="Auto"
                                           HorizontalScrollBarVisibility="Auto"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Row 2: Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button x:Name="CancelButton"
                    Content="Annuler"
                    Style="{StaticResource ModernButton}"
                    Width="120"
                    Margin="0,0,8,0"
                    Click="CancelButton_Click"/>
            <Button x:Name="ApplyButton"
                    Style="{StaticResource PrimaryButton}"
                    Width="140"
                    Click="ApplyButton_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="âœ¨" FontSize="14" Margin="0,0,6,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Appliquer" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
