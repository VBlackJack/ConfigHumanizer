<Window x:Class="ConfigHumanizer.UI.Views.ParameterEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ConfigHumanizer.UI.ViewModels"
        xmlns:models="clr-namespace:ConfigHumanizer.Core.Models;assembly=ConfigHumanizer.Core"
        xmlns:converters="clr-namespace:ConfigHumanizer.UI.Converters"
        mc:Ignorable="d"
        Title="Ajouter un Paramètre"
        Height="600" Width="900"
        MinHeight="500" MinWidth="700"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource LightBackground}"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <converters:SeverityToBorderColorConverter x:Key="SeverityToBorderColorConverter"/>
            <converters:SeverityToTextConverter x:Key="SeverityToTextConverter"/>
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>

            <!-- Style pour les options Enum avec sévérité -->
            <Style x:Key="EnumRadioButton" TargetType="RadioButton">
                <Setter Property="Margin" Value="0,4"/>
                <Setter Property="Padding" Value="8,6"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <Border x:Name="border"
                                    Background="{StaticResource CardBackground}"
                                    BorderBrush="{StaticResource BorderColor}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="{TemplateBinding Padding}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Ellipse x:Name="radioCircle"
                                             Width="16" Height="16"
                                             Stroke="{StaticResource BorderColor}"
                                             StrokeThickness="2"
                                             Fill="Transparent"
                                             Margin="0,0,10,0"/>

                                    <ContentPresenter Grid.Column="1"
                                                      VerticalAlignment="Center"/>

                                    <Border x:Name="severityBadge"
                                            Grid.Column="2"
                                            Visibility="Collapsed"
                                            CornerRadius="3"
                                            Padding="6,2"
                                            Margin="8,0,0,0">
                                        <TextBlock x:Name="severityText"
                                                   FontSize="10"
                                                   FontWeight="SemiBold"/>
                                    </Border>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                    <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                    <Setter TargetName="radioCircle" Property="Fill" Value="{StaticResource PrimaryColor}"/>
                                    <Setter TargetName="radioCircle" Property="Stroke" Value="{StaticResource PrimaryColor}"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource HoverColor}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding CancelCommand}"/>
        <KeyBinding Key="Return" Command="{Binding AddCommand}"/>
    </Window.InputBindings>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <Border Grid.Row="0"
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16"
                Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Ajouter un Paramètre"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextDark}"/>
                    <TextBlock Margin="0,4,0,0">
                        <Run Text="Format : " Foreground="{StaticResource TextMuted}"/>
                        <Run Text="{Binding FormatName, Mode=OneWay}"
                             FontWeight="SemiBold"
                             Foreground="{StaticResource PrimaryColor}"/>
                    </TextBlock>
                </StackPanel>

                <!-- Recherche -->
                <TextBox Grid.Column="1"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource SearchTextBox}"
                         Width="250">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Escape" Command="{Binding CancelCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>
            </Grid>
        </Border>

        <!-- Contenu principal -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Liste des catégories -->
            <Border Grid.Column="0"
                    Background="{StaticResource CardBackground}"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Margin="0,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Catégories"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextMuted}"
                               Padding="12,10"/>

                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding Categories}"
                             SelectedItem="{Binding SelectedCategory}"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="4">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="8,6">
                                    <TextBlock Text="{Binding Icon}"
                                               FontSize="14"
                                               Margin="0,0,8,0"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Name}"
                                               FontSize="13"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="border"
                                                    Background="Transparent"
                                                    CornerRadius="4"
                                                    Margin="2">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryColor}"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="{StaticResource HoverColor}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Liste des paramètres -->
            <Border Grid.Column="1"
                    Background="{StaticResource CardBackground}"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Margin="0,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Paramètres"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextMuted}"
                               Padding="12,10"/>

                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding FilteredParameters}"
                             SelectedItem="{Binding SelectedParameter}"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="4"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8,6" Margin="2">
                                    <StackPanel>
                                        <TextBlock Text="{Binding DisplayName}"
                                                   FontSize="13"
                                                   FontWeight="Medium"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding Key}"
                                                   FontSize="11"
                                                   Foreground="{StaticResource TextMuted}"
                                                   FontFamily="Consolas"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="border"
                                                    Background="Transparent"
                                                    CornerRadius="4"
                                                    BorderThickness="0,0,3,0"
                                                    BorderBrush="Transparent">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="{StaticResource HoverColor}"/>
                                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#F0F0F0"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Détails et édition du paramètre -->
            <Border Grid.Column="2"
                    Background="{StaticResource CardBackground}"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="1"
                    CornerRadius="8">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16"
                                Visibility="{Binding HasSelectedParameter, Converter={StaticResource BoolToVis}}">

                        <!-- Nom du paramètre -->
                        <TextBlock Text="{Binding SelectedParameter.DisplayName}"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextDark}"
                                   TextWrapping="Wrap"/>

                        <TextBlock Text="{Binding SelectedParameter.Key}"
                                   FontSize="12"
                                   FontFamily="Consolas"
                                   Foreground="{StaticResource TextMuted}"
                                   Margin="0,4,0,12"/>

                        <!-- Description -->
                        <TextBlock Text="{Binding SelectedParameter.Description}"
                                   FontSize="13"
                                   Foreground="{StaticResource TextMuted}"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,16"
                                   Visibility="{Binding SelectedParameter.Description, Converter={StaticResource BoolToVis}}"/>

                        <!-- Zone d'édition de valeur -->
                        <Border Background="{StaticResource LightBackground}"
                                CornerRadius="6"
                                Padding="12"
                                Margin="0,0,0,16">

                            <StackPanel>
                                <TextBlock Text="Valeur"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextMuted}"
                                           Margin="0,0,0,8"/>

                                <!-- Éditeur selon le type -->
                                <!-- Type Enum -->
                                <ItemsControl ItemsSource="{Binding SelectedParameter.EnumValues}"
                                              Visibility="{Binding IsEnumParameter, Converter={StaticResource BoolToVis}}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <RadioButton Style="{StaticResource EnumRadioButton}"
                                                         GroupName="EnumValue"
                                                         Content="{Binding DisplayName}"
                                                         Tag="{Binding Value}"
                                                         Checked="EnumRadioButton_Checked"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Type Boolean -->
                                <StackPanel Visibility="{Binding IsBooleanParameter, Converter={StaticResource BoolToVis}}">
                                    <RadioButton Content="Oui"
                                                 GroupName="BoolValue"
                                                 Tag="true"
                                                 Style="{StaticResource EnumRadioButton}"
                                                 Checked="BoolRadioButton_Checked"/>
                                    <RadioButton Content="Non"
                                                 GroupName="BoolValue"
                                                 Tag="false"
                                                 Style="{StaticResource EnumRadioButton}"
                                                 Checked="BoolRadioButton_Checked"/>
                                </StackPanel>

                                <!-- Type Integer/Port -->
                                <Grid Visibility="{Binding IsIntegerParameter, Converter={StaticResource BoolToVis}}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="IntegerTextBox"
                                             Style="{StaticResource SearchTextBox}"
                                             TextChanged="IntegerTextBox_TextChanged"/>
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding SelectedParameter.Unit}"
                                               VerticalAlignment="Center"
                                               Margin="8,0,0,0"
                                               Foreground="{StaticResource TextMuted}"/>
                                </Grid>

                                <!-- Type String/Path/IP/Duration/Size -->
                                <Grid Visibility="{Binding IsStringParameter, Converter={StaticResource BoolToVis}}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="StringTextBox"
                                             Style="{StaticResource SearchTextBox}"
                                             TextChanged="StringTextBox_TextChanged"/>
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding SelectedParameter.Unit}"
                                               VerticalAlignment="Center"
                                               Margin="8,0,0,0"
                                               Foreground="{StaticResource TextMuted}"/>
                                </Grid>

                                <!-- Erreur de validation -->
                                <TextBlock Text="{Binding CurrentValue.ValidationError}"
                                           Foreground="{StaticResource DangerColor}"
                                           FontSize="12"
                                           Margin="0,8,0,0"
                                           TextWrapping="Wrap"
                                           Visibility="{Binding CurrentValue.ValidationError, Converter={StaticResource BoolToVis}}"/>
                            </StackPanel>
                        </Border>

                        <!-- Exemple -->
                        <StackPanel Visibility="{Binding SelectedParameter.Example, Converter={StaticResource BoolToVis}}"
                                    Margin="0,0,0,12">
                            <TextBlock Text="Exemple"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextMuted}"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding SelectedParameter.Example}"
                                       FontFamily="Consolas"
                                       FontSize="12"
                                       Foreground="{StaticResource TextMuted}"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Aperçu du code généré -->
        <Border Grid.Row="2"
                Background="#1E1E1E"
                CornerRadius="8"
                Margin="0,16,0,0"
                Padding="16"
                Visibility="{Binding HasSelectedParameter, Converter={StaticResource BoolToVis}}">
            <StackPanel>
                <TextBlock Text="Aperçu"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Foreground="#808080"
                           Margin="0,0,0,8"/>
                <TextBlock Text="{Binding GeneratedLine}"
                           FontFamily="Consolas"
                           FontSize="14"
                           Foreground="#D4D4D4"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Boutons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="Annuler"
                    Command="{Binding CancelCommand}"
                    Style="{StaticResource ModernButton}"
                    Width="100"
                    Margin="0,0,8,0"/>
            <Button Content="Ajouter"
                    Command="{Binding AddCommand}"
                    Style="{StaticResource PrimaryButton}"
                    Width="100"
                    IsEnabled="{Binding CanAdd}"/>
        </StackPanel>
    </Grid>
</Window>
