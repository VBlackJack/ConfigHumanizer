<Window x:Class="ConfigHumanizer.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConfigHumanizer.UI"
        xmlns:viewModels="clr-namespace:ConfigHumanizer.UI.ViewModels"
        xmlns:converters="clr-namespace:ConfigHumanizer.UI.Converters"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
        mc:Ignorable="d"
        Title="ConfigHumanizer - Analyseur de Configuration"
        Height="800" Width="1400"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource LightBackground}"
        AllowDrop="True"
        Drop="Window_Drop"
        DragOver="Window_DragOver">

    <!-- Raccourcis clavier -->
    <Window.InputBindings>
        <KeyBinding Key="O" Modifiers="Ctrl" Command="{Binding OpenConfigCommand}" />
        <KeyBinding Key="S" Modifiers="Ctrl" Command="{Binding SaveConfigCommand}" />
        <KeyBinding Key="Z" Modifiers="Ctrl" Command="{Binding UndoCommand}" />
        <KeyBinding Key="F" Modifiers="Ctrl" Command="{Binding FocusSearchCommand}" />
        <KeyBinding Key="N" Modifiers="Ctrl" Command="{Binding OpenParameterEditorCommand}" />
        <KeyBinding Key="Escape" Command="{Binding ClearSearchCommand}" />
    </Window.InputBindings>

    <Window.DataContext>
        <viewModels:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <converters:SeverityToColorConverter x:Key="SeverityToColorConverter" />
        <converters:SeverityToTextConverter x:Key="SeverityToTextConverter" />
        <converters:SeverityToIconConverter x:Key="SeverityToIconConverter" />
        <converters:SeverityToBorderColorConverter x:Key="SeverityToBorderColorConverter" />
        <converters:SeverityToBadgeColorConverter x:Key="SeverityToBadgeColorConverter" />
        <converters:StringToBrushConverter x:Key="StringToBrushConverter" />
        <converters:IntToVisibilityConverter x:Key="IntToVisibilityConverter" />
        <converters:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />

        <!-- Tab Control Style -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border"
                                Background="{StaticResource CardBackground}"
                                BorderBrush="{StaticResource BorderColor}"
                                BorderThickness="1,1,1,0"
                                CornerRadius="6,6,0,0"
                                Margin="2,0"
                                Padding="16,10">
                            <ContentPresenter x:Name="ContentSite"
                                              ContentSource="Header"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource PrimaryColor}" />
                                <Setter TargetName="ContentSite" Property="TextBlock.Foreground" Value="White" />
                                <Setter TargetName="ContentSite" Property="TextBlock.FontWeight" Value="SemiBold" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="ContentSite" Property="TextBlock.Foreground" Value="{StaticResource TextDark}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- ==================== TOOLBAR ==================== -->
        <Border Grid.Row="0"
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Left: File Actions -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Command="{Binding OpenConfigCommand}"
                            Style="{StaticResource ModernButton}"
                            ToolTip="Ouvrir un fichier de configuration (Ctrl+O)"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#x1F4C2;" FontSize="14" Margin="0,0,6,0" />
                            <TextBlock Text="Ouvrir" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding OpenFolderCommand}"
                            Style="{StaticResource ModernButton}"
                            ToolTip="Scanner un dossier de configuration"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#x1F4C1;" FontSize="14" Margin="0,0,6,0" />
                            <TextBlock Text="Dossier" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding SaveConfigCommand}"
                            Style="{StaticResource PrimaryButton}"
                            ToolTip="Sauvegarder le fichier (Ctrl+S)"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#x1F4BE;" FontSize="14" Margin="0,0,6,0" />
                            <TextBlock Text="Sauver" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <!-- Undo Button -->
                    <Button Command="{Binding UndoCommand}"
                            Style="{StaticResource ModernButton}"
                            ToolTip="Annuler la derniÃ¨re modification (Ctrl+Z)"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â†©ï¸" FontSize="14" Margin="0,0,6,0" />
                            <TextBlock Text="Annuler" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <!-- Recent Files Dropdown -->
                    <Border Background="{StaticResource CardBackground}"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Margin="0,0,8,0"
                            Visibility="{Binding HasRecentFiles, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ComboBox x:Name="RecentFilesCombo"
                                  ItemsSource="{Binding RecentFiles}"
                                  Width="180"
                                  BorderThickness="0"
                                  Padding="8,6"
                                  ToolTip="Fichiers rÃ©cents">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" />
                                        <TextBlock Text="{Binding Directory}" FontSize="10" Foreground="{StaticResource TextMuted}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Border>

                    <Rectangle Width="1" Fill="{StaticResource BorderColor}" Margin="8,0" />

                    <Button Command="{Binding ExportHtmlCommand}"
                            Style="{StaticResource ModernButton}"
                            ToolTip="Exporter le rapport d'analyse en HTML"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#x1F4E4;" FontSize="14" Margin="0,0,6,0" />
                            <TextBlock Text="Exporter" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                </StackPanel>

                <!-- Center: Current File -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Text="&#x1F4C4;" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center" />
                    <TextBlock Text="{Binding CurrentFileName}"
                               FontWeight="SemiBold"
                               FontSize="13"
                               Foreground="{StaticResource TextDark}"
                               VerticalAlignment="Center" />
                </StackPanel>

                <!-- Right: Theme Toggle -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Command="{Binding ToggleDarkModeCommand}"
                            Style="{StaticResource IconButton}"
                            ToolTip="Basculer mode sombre/clair"
                            Padding="10,8">
                        <TextBlock Text="&#x1F319;" FontSize="16" />
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ==================== DASHBOARD ==================== -->
        <Border Grid.Row="1"
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                Padding="15,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Stats Cards -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <!-- Health Score -->
                    <Border Style="{StaticResource StatCard}">
                        <Grid>
                            <Rectangle Width="4" HorizontalAlignment="Left" Margin="-17,0,0,0"
                                       Fill="{Binding HealthScoreColor, Converter={StaticResource StringToBrushConverter}}" />
                            <StackPanel Margin="0,0,0,0">
                                <TextBlock Text="{Binding HealthScoreText}"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="{Binding HealthScoreColor, Converter={StaticResource StringToBrushConverter}}" />
                                <TextBlock Text="Score santÃ©"
                                           FontSize="11"
                                           Foreground="{StaticResource TextMuted}" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Critical -->
                    <Border Style="{StaticResource StatCard}">
                        <Grid>
                            <Rectangle Width="4" HorizontalAlignment="Left" Margin="-17,0,0,0" Fill="#E74C3C" />
                            <StackPanel>
                                <TextBlock Text="{Binding CriticalCount}"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="#E74C3C" />
                                <TextBlock Text="Critique"
                                           FontSize="11"
                                           Foreground="{StaticResource TextMuted}" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Warnings -->
                    <Border Style="{StaticResource StatCard}">
                        <Grid>
                            <Rectangle Width="4" HorizontalAlignment="Left" Margin="-17,0,0,0" Fill="#F39C12" />
                            <StackPanel>
                                <TextBlock Text="{Binding WarningCount}"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="#F39C12" />
                                <TextBlock Text="Alertes"
                                           FontSize="11"
                                           Foreground="{StaticResource TextMuted}" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Info -->
                    <Border Style="{StaticResource StatCard}">
                        <Grid>
                            <Rectangle Width="4" HorizontalAlignment="Left" Margin="-17,0,0,0" Fill="#3498DB" />
                            <StackPanel>
                                <TextBlock Text="{Binding InfoCount}"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="#3498DB" />
                                <TextBlock Text="Info"
                                           FontSize="11"
                                           Foreground="{StaticResource TextMuted}" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Good Practices -->
                    <Border Style="{StaticResource StatCard}">
                        <Grid>
                            <Rectangle Width="4" HorizontalAlignment="Left" Margin="-17,0,0,0" Fill="#4CAF50" />
                            <StackPanel>
                                <TextBlock Text="{Binding GoodCount}"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="#4CAF50" />
                                <TextBlock Text="Bon"
                                           FontSize="11"
                                           Foreground="{StaticResource TextMuted}" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Search & Filters -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Search Box -->
                    <Grid Margin="0,0,15,0">
                        <TextBox x:Name="SearchBox"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource SearchTextBox}"
                                 Width="250"
                                 ToolTip="Rechercher dans les rÃ¨gles (Ctrl+F)" />
                        <TextBlock Text="&#x1F50D; Rechercher..."
                                   IsHitTestVisible="False"
                                   Foreground="{StaticResource TextMuted}"
                                   VerticalAlignment="Center"
                                   Margin="12,0,0,0"
                                   FontSize="13">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <Button Command="{Binding ClearSearchCommand}"
                                Style="{StaticResource IconButton}"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,4,0"
                                Padding="6"
                                Visibility="{Binding SearchText.Length, Converter={StaticResource IntToVisibilityConverter}}">
                            <TextBlock Text="&#x2715;" FontSize="10" />
                        </Button>
                    </Grid>

                    <!-- Filter Toggles -->
                    <StackPanel Orientation="Horizontal">
                        <ToggleButton IsChecked="{Binding FilterCritical}"
                                      Style="{StaticResource FilterToggleButton}"
                                      ToolTip="Afficher les problÃ¨mes critiques"
                                      Margin="0,0,4,0">
                            <TextBlock Text="&#x1F534; Critique" />
                        </ToggleButton>
                        <ToggleButton IsChecked="{Binding FilterWarning}"
                                      Style="{StaticResource FilterToggleButton}"
                                      ToolTip="Afficher les alertes"
                                      Margin="0,0,4,0">
                            <TextBlock Text="&#x1F7E0; Alerte" />
                        </ToggleButton>
                        <ToggleButton IsChecked="{Binding FilterInfo}"
                                      Style="{StaticResource FilterToggleButton}"
                                      ToolTip="Afficher les informations"
                                      Margin="0,0,4,0">
                            <TextBlock Text="&#x1F535; Info" />
                        </ToggleButton>
                        <ToggleButton IsChecked="{Binding FilterGood}"
                                      Style="{StaticResource FilterToggleButton}"
                                      ToolTip="Afficher les bonnes pratiques"
                                      Margin="0,0,8,0">
                            <TextBlock Text="&#x1F7E2; Bon" />
                        </ToggleButton>

                        <Button Command="{Binding JumpToProblemsCommand}"
                                Style="{StaticResource ModernButton}"
                                ToolTip="Afficher uniquement les problÃ¨mes"
                                Padding="10,6">
                            <TextBlock Text="&#x26A0; ProblÃ¨mes" />
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ==================== MAIN CONTENT ==================== -->
        <Grid Grid.Row="2" Margin="10,10,10,0">
            <!-- Dashboard View (visible when IsDashboardVisible is true) -->
            <Border Background="{StaticResource CardBackground}"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Visibility="{Binding IsDashboardVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Dashboard Header -->
                    <Border Grid.Row="0" Background="{StaticResource PrimaryColor}" Padding="16">
                        <Grid>
                            <StackPanel>
                                <TextBlock Text="Dashboard - Analyse de Dossier"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="White"/>
                                <TextBlock Text="{Binding ScannedFolderPath}"
                                           FontSize="12"
                                           Foreground="White"
                                           Opacity="0.8"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                            <Button Command="{Binding CloseDashboardCommand}"
                                    Style="{StaticResource IconButton}"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Padding="8">
                                <TextBlock Text="âœ•" FontSize="16" Foreground="White"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Dashboard Stats -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="16,12">
                        <Border Style="{StaticResource StatCard}">
                            <StackPanel>
                                <TextBlock Text="{Binding DashboardTotalFiles}"
                                           FontSize="24" FontWeight="Bold"
                                           Foreground="{StaticResource PrimaryColor}"/>
                                <TextBlock Text="Fichiers" FontSize="11"
                                           Foreground="{StaticResource TextMuted}"/>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource StatCard}">
                            <Grid>
                                <Rectangle Width="4" HorizontalAlignment="Left" Margin="-17,0,0,0" Fill="#E74C3C"/>
                                <StackPanel>
                                    <TextBlock Text="{Binding DashboardCriticalFiles}"
                                               FontSize="24" FontWeight="Bold" Foreground="#E74C3C"/>
                                    <TextBlock Text="Critiques" FontSize="11"
                                               Foreground="{StaticResource TextMuted}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <Border Style="{StaticResource StatCard}">
                            <Grid>
                                <Rectangle Width="4" HorizontalAlignment="Left" Margin="-17,0,0,0" Fill="#F39C12"/>
                                <StackPanel>
                                    <TextBlock Text="{Binding DashboardWarningFiles}"
                                               FontSize="24" FontWeight="Bold" Foreground="#F39C12"/>
                                    <TextBlock Text="Attention" FontSize="11"
                                               Foreground="{StaticResource TextMuted}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <Border Style="{StaticResource StatCard}">
                            <Grid>
                                <Rectangle Width="4" HorizontalAlignment="Left" Margin="-17,0,0,0" Fill="#4CAF50"/>
                                <StackPanel>
                                    <TextBlock Text="{Binding DashboardHealthyFiles}"
                                               FontSize="24" FontWeight="Bold" Foreground="#4CAF50"/>
                                    <TextBlock Text="Sains" FontSize="11"
                                               Foreground="{StaticResource TextMuted}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <Border Style="{StaticResource StatCard}">
                            <StackPanel>
                                <TextBlock FontSize="24" FontWeight="Bold"
                                           Foreground="{StaticResource PrimaryColor}">
                                    <Run Text="{Binding DashboardAverageScore, StringFormat={}{0:F0}, Mode=OneWay}"/><Run Text="%"/>
                                </TextBlock>
                                <TextBlock Text="Score Moyen" FontSize="11"
                                           Foreground="{StaticResource TextMuted}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Dashboard DataGrid -->
                    <DataGrid Grid.Row="2"
                              ItemsSource="{Binding DashboardItems}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              BorderThickness="0"
                              Background="Transparent"
                              RowBackground="{StaticResource CardBackground}"
                              AlternatingRowBackground="#FAFAFA"
                              Margin="16,0,16,16">
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Cursor" Value="Hand"/>
                                <EventSetter Event="MouseDoubleClick" Handler="DashboardRow_MouseDoubleClick"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource HoverColor}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <!-- Status Color -->
                            <DataGridTemplateColumn Header="" Width="40">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Ellipse Width="12" Height="12"
                                                 Fill="{Binding StatusColor, Converter={StaticResource StringToBrushConverter}}"
                                                 HorizontalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- File Name -->
                            <DataGridTextColumn Header="Fichier" Binding="{Binding FileName}" Width="200">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="4"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Format -->
                            <DataGridTextColumn Header="Format" Binding="{Binding Format}" Width="120">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="4"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Health Score -->
                            <DataGridTemplateColumn Header="Score" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid Margin="4">
                                            <ProgressBar Value="{Binding HealthScore}"
                                                         Maximum="100"
                                                         Height="16"
                                                         Background="#E0E0E0"
                                                         Foreground="{Binding StatusColor, Converter={StaticResource StringToBrushConverter}}"/>
                                            <TextBlock Text="{Binding HealthScore, StringFormat={}{0:F0}%}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       FontSize="10"
                                                       FontWeight="Bold"/>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Critical Count -->
                            <DataGridTemplateColumn Header="Critiques" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="#FFEBEE"
                                                CornerRadius="10"
                                                Padding="8,2"
                                                HorizontalAlignment="Center"
                                                Visibility="{Binding CriticalCount, Converter={StaticResource IntToVisibilityConverter}}">
                                            <TextBlock Text="{Binding CriticalCount}"
                                                       FontWeight="Bold"
                                                       Foreground="#C62828"
                                                       FontSize="11"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Warning Count -->
                            <DataGridTemplateColumn Header="Alertes" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="#FFF3E0"
                                                CornerRadius="10"
                                                Padding="8,2"
                                                HorizontalAlignment="Center"
                                                Visibility="{Binding WarningCount, Converter={StaticResource IntToVisibilityConverter}}">
                                            <TextBlock Text="{Binding WarningCount}"
                                                       FontWeight="Bold"
                                                       Foreground="#E65100"
                                                       FontSize="11"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- File Path -->
                            <DataGridTextColumn Header="Chemin" Binding="{Binding FilePath}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="4"/>
                                        <Setter Property="Foreground" Value="{StaticResource TextMuted}"/>
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Editor View (hidden when dashboard is visible) -->
            <TabControl Visibility="{Binding IsDashboardVisible, Converter={StaticResource InverseBooleanToVisibilityConverter}, ConverterParameter=Inverse}">

            <!-- Tab 1: Editor & Analysis -->
            <TabItem>
                <TabItem.Header>
                    <TextBlock FontSize="14">
                        <Run Text="&#x1F4DD;" /> Ã‰diteur &amp; Analyse
                    </TextBlock>
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" MinWidth="300" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="2*" MinWidth="400" />
                    </Grid.ColumnDefinitions>

                    <!-- Left Panel: Code Editor -->
                    <Border Grid.Column="0"
                            Background="{StaticResource DarkBackground}">
                        <DockPanel>
                            <Border DockPanel.Dock="Top"
                                    Background="#252526"
                                    Padding="12,8">
                                <Grid>
                                    <StackPanel>
                                        <TextBlock Text="Fichier de configuration"
                                                   FontWeight="SemiBold"
                                                   FontSize="13"
                                                   Foreground="#CCCCCC" />
                                        <TextBlock Text="{Binding CurrentFilePath}"
                                                   FontSize="11"
                                                   Foreground="#808080"
                                                   TextTrimming="CharacterEllipsis"
                                                   ToolTip="{Binding CurrentFilePath}"
                                                   Margin="0,2,0,0" />
                                    </StackPanel>
                                    <TextBlock Text="Glissez des fichiers ici"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               FontSize="11"
                                               Foreground="#606060" />
                                </Grid>
                            </Border>
                            <avalonEdit:TextEditor x:Name="CodeEditor"
                                                   FontFamily="Consolas"
                                                   FontSize="14"
                                                   ShowLineNumbers="True"
                                                   SyntaxHighlighting="XML" />
                        </DockPanel>
                    </Border>

                    <!-- Splitter -->
                    <GridSplitter Grid.Column="1"
                                  Width="5"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Stretch"
                                  Background="{StaticResource BorderColor}"
                                  Cursor="SizeWE" />

                    <!-- Right Panel: Analysis Results -->
                    <Border Grid.Column="2"
                            Background="{StaticResource LightBackground}"
                            Padding="15">
                        <Grid>
                            <!-- Loading Overlay -->
                            <Border Background="#80FFFFFF"
                                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    Panel.ZIndex="100">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="â³" FontSize="48" HorizontalAlignment="Center" />
                                    <TextBlock Text="Analyse en cours..."
                                               FontSize="14"
                                               Foreground="{StaticResource TextMuted}"
                                               Margin="0,10,0,0" />
                                </StackPanel>
                            </Border>

                            <DockPanel>
                                <!-- Header -->
                                <Grid DockPanel.Dock="Top" Margin="5,0,5,15">
